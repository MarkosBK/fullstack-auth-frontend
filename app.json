{
  "expo": {
    "name": "my-expo-app",
    "slug": "my-expo-app",
    "version": "1.0.0",
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#dee2e6",
          "image": "./assets/splash-screen.png",
          "resizeMode": "cover",
          "imageWidth": 200,
          "dark": {
            "backgroundColor": "#222222",
            "image": "./assets/splash-screen.png"
          }
        }
      ]
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "my-expo-app",
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.markosbk.my-expo-app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.markosbk.myexpoapp",
      "softwareKeyboardLayoutMode": "pan"
    }
  }
}
